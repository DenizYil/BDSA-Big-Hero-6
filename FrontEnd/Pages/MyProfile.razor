@page "/MyProfile"
@inherits LayoutComponentBase
<style>
.required {
    color: red;
}

.blue {
    color: #1861ac;
}

.header {
    margin: 0 0 0 0;
    padding: 0 0 0 0;
    color: #0B4F6C;
}

.center {
    text-align: center;
}

.container {
    width: 95%;
    margin-left: auto;
    margin-right: auto;
}

.form-header {
    font-size: 20px;
    color: #0B4F6C;
}

input[type=text] {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    box-sizing: border-box;
    border-radius: 10px;
}

button[type=submit] {
    margin-left: auto;
    margin-right: auto;
    margin-top: 20px;
    margin-bottom: 30px;
    display: block;
    background-color: #0B4F6C;
    color: white;
    font-size: 30px;
    border: #707070;
    border-radius: 10px;
    height: 50px;
    width: 90%;
}
</style>

<div class="container">
    <div class="center">
        <h1 class="header">My Profile</h1>
        <hr/>
        <h2 class="header">Update your information</h2>
    </div>

    <form>
        <label for="name" class="form-header"> Your name <span class="required">*</span></label><br/>
        <input type="text" id="name" name="name" placeholder="Enter your name new name here"><br/>
        
        <label for="email" class="form-header">Your email <span class="required">*</span></label><br/>
        <input type="text" id="email" placeholder="Enter your new e-mail address here"><br/>

        <button type="submit">Update profile</button>
    </form>
</div>

